<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Ejerrealm1.viewmodels" 
    x:Class="Ejerrealm1.Views.DetallesPersonaje">
    <ContentPage.BindingContext> 
        <viewmodels:PersonajeModel/> 
    </ContentPage.BindingContext> 
    <ContentPage.Content> 
        <StackLayout Orientation="Vertical"> 
            <Label FontSize="40" TextColor="Fuchsia" Text="Detalles Personaje" 
                   HorizontalOptions="Center"/> 
            <Label Text="Id Personaje" VerticalOptions="Center"/> 
            <Label HorizontalOptions="FillAndExpand" 
                   FontSize="20" 
                           Text="{Binding Departamento.dept_no}"/> 
            <Label Text="Nombre" VerticalOptions="Center"/> 
            <Label HorizontalOptions="FillAndExpand" TextColor="Blue" 
                   FontSize="20" 
                           Text="{Binding Departamento.dept_name}"/> 
            <Label Text="Serie" VerticalOptions="Center"/> 
            <Label HorizontalOptions="FillAndExpand" TextColor="Blue" 
                   FontSize="20" 
                           Text="{Binding Departamento.dept_loc}"/> 
        </StackLayout> 
    </ContentPage.Content> 
</ContentPage>
